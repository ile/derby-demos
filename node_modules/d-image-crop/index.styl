#d-image-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(55,55,55,0.3)
  background radial-gradient(center, ellipse cover, rgba(77,77,77,0.2) 0%,rgba(0,0,0,0.5) 100%)
  z-index 1000

  #d-image-dialog
    box-sizing border-box
    position fixed
    padding 1em
    background #fafafa
    width 350px
    height 450px
    top 50%
    left 50%
    margin-top -200px
    margin-left -135px
    border-radius 5px
    box-shadow 0 0 25px rgba(0,0,0,0.4)
    animation 0.4s popup cubic-bezier(0,.96,.44,.98)

    h1
      font italic normal 22px/22px Lora, Cambria, Georgia
      text-align center
      color #555
      margin 0
      padding 0

    #d-image-crop-controls
      width 250px
      margin 20px auto 0 auto
      text-align center

      div
        margin-top 20px

        button
          margin-left 5px

      input
        width 170px

    #d-image-crop-outer:after
      content ''
      position absolute
      width 250px
      height 250px
      box-shadow inset 0px 0px 0px 40px rgba(255,255,255,0.85)
      z-index 2000

    #d-image-crop-outer
      position relative
      overflow hidden
      margin 10px auto 0 auto
      width 250px
      height 250px

    #d-image-crop
      position absolute
      overflow visible
      width 170px
      height 170px
      border solid 1px #aaa
      top 40px
      left 40px
      z-index 1500

    #d-image-crop-drag
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 3000
      cursor move

    img
      position absolute
      top 0
      left 0
      max-width none
      max-height none
      z-index 1500

@media screen and (-webkit-min-device-pixel-ratio:0) {  
  input[type='range'] {
    -webkit-appearance: none;
    border-radius: 5px;
    box-shadow: inset 1px 1px 3px #777;
    background-color: #Ccc;
    height: 8px;
    vertical-align: middle;
    outline: none;
  }

  input[type='range']::-webkit-slider-thumb {
    -webkit-appearance: none !important;
    border-radius: 20px;
    background-color: #FFF;
    box-shadow 1px 1px 5px rgba(0,0,0,0.5);
    height: 20px;
    width: 20px;
  }
}

@-moz-document url-prefix() {  
  input[type='range']::-moz-range-track {
    -moz-appearance: none;
    border-radius: 5px;
    background-color: #Ccc;
    height: 8px;
    vertical-align: middle;
    box-shadow: inset 1px 1px 3px #777;
  }

  input[type='range']::-moz-slider-thumb {
    -moz-appearance: none !important;
    border-radius: 20px;
    background-color: #FFF;
    box-shadow 1px 1px 5px rgba(0,0,0,0.5);
    height: 20px;
    width: 20px;
    border-width: 0;
  }
}

@keyframes popup
  0%
    transform scale(0)
  100%
    transform scale(1)
